    <script>
        function createFrequencyDropdown(id) {
            const frequencies = ['annually', 'quarterly', 'monthly', 'weekly'];
            let dropdown = `<select id="${id}">`;
            frequencies.forEach(frequency => {
                dropdown += `<option value="${frequency}">${frequency.charAt(0).toUpperCase() + frequency.slice(1)}</option>`;
            });
            dropdown += `</select>`;
            return dropdown;
        }

        function createInputWithFrequency(labelId, inputId) {
            const input = document.getElementById(inputId);
            const frequencyId = `${inputId}Frequency`;
            const dropdown = createFrequencyDropdown(frequencyId);
            document.getElementById(frequencyId).innerHTML = dropdown;
        }

        function initializeFrequencyDropdowns() {
            const ids = ['sales', 'cogsMaterials', 'cogsLabor', 'cogsOverhead', 'cogsShipping', 'rent', 'utilities', 'salaries', 'marketing', 'insurance', 'buildingRent', 'buildingMaintenance', 'buildingUtilities', 'vehicleGas', 'vehicleMaintenance', 'vehicleInsurance'];
            ids.forEach(id => {
                createInputWithFrequency(id, id);
            });
        }

        document.addEventListener("DOMContentLoaded", initializeFrequencyDropdowns);
    </script>
